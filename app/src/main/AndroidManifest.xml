<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pe.com.smartvet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".SmartVetApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.smartvet.activities.LoginActivity" />
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AddProductActivity"
            android:label="@string/title_activity_add_product"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.smartvet.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AboutProductActivity"
            android:label="@string/title_activity_about_product"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.smartvet.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.EditUserProfileActivity"
            android:label="@string/title_activity_edit_user_profile"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.smartvet.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AboutOwnerActivity"
            android:label="@string/title_activity_about_owner"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.smartvet.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AddOwnerActivity"
            android:label="@string/title_activity_add_owner"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.smartvet.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AboutPetActivity"
            android:label="@string/title_activity_about_pet"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.smartvet.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AddPetActivity"
            android:label="@string/title_activity_add_pet"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.smartvet.activities.AboutOwnerActivity" />
        </activity>
        <activity android:name=".activities.PDFVisorActivity" />
        <activity
            android:name=".activities.ListPetsActivity"
            android:label="@string/title_activity_list_pets"
            android:parentActivityName=".activities.AboutOwnerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.smartvet.activities.AboutOwnerActivity" />
        </activity>
        <activity
            android:name=".activities.ListClinicalHistoriesActivity"
            android:label="@string/title_activity_list_clinical_histories"
            android:parentActivityName=".activities.AboutPetActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.smartvet.activities.AboutPetActivity" />
        </activity>
        <activity
            android:name=".AddClinicHistoryActivity"
            android:label="@string/title_activity_add_clinic_history"
            android:parentActivityName=".activities.AboutPetActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pe.com.smartvet.activities.AboutPetActivity" />
        </activity>
    </application>

</manifest>