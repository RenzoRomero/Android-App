<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.AboutProductActivity"
    tools:showIn="@layout/activity_about_product">

    <com.androidnetworking.widget.ANImageView
        android:id="@+id/photoANImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_launcher"
        android:elevation="6dp" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/photoANImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:text="@string/sample_name"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40sp"/>

    <ImageView
        android:id="@+id/brandIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_branding_watermark_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/brandTextView"
        app:layout_constraintBottom_toBottomOf="@id/brandTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/brandTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintStart_toEndOf="@id/brandIcon"
        android:layout_margin="16dp"
        android:text="@string/sample_brand"/>

    <ImageView
        android:id="@+id/descriptionIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_description_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/descriptionTextView"
        app:layout_constraintBottom_toBottomOf="@id/descriptionTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/brandTextView"
        app:layout_constraintStart_toEndOf="@id/descriptionIcon"
        android:layout_margin="16dp"
        android:text="@string/sample_description"/>

    <ImageView
        android:id="@+id/priceIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_local_atm_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/priceTextView"
        app:layout_constraintBottom_toBottomOf="@id/priceTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/descriptionTextView"
        app:layout_constraintStart_toEndOf="@id/priceIcon"
        android:layout_margin="16dp"
        android:text="@string/sample_price"/>

    <ImageView
        android:id="@+id/quantityIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_confirmation_number_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/quantityTextView"
        app:layout_constraintBottom_toBottomOf="@id/quantityTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/quantityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/priceTextView"
        app:layout_constraintStart_toEndOf="@id/quantityIcon"
        android:layout_margin="16dp"
        android:text="@string/sample_quantity"/>


</android.support.constraint.ConstraintLayout>