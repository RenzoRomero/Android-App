<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.AboutClinicHistoryActivity"
    tools:showIn="@layout/activity_about_clinic_history">

    <com.androidnetworking.widget.ANImageView
        android:id="@+id/photoANImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_launcher"
        android:elevation="6dp" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/photoANImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:text="@string/sample_name"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40sp"/>

    <ImageView
        android:id="@+id/dateIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_date_range_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/dateTextView"
        app:layout_constraintBottom_toBottomOf="@id/dateTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintStart_toEndOf="@id/dateIcon"
        android:layout_margin="16dp"
        android:text="@string/sample_date"/>

    <ImageView
        android:id="@+id/weightIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_balance_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/weightTextView"
        app:layout_constraintBottom_toBottomOf="@id/weightTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/weightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dateTextView"
        app:layout_constraintStart_toEndOf="@id/weightIcon"
        android:layout_margin="16dp"
        android:text="@string/sample_weight"/>

    <ImageView
        android:id="@+id/heightIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_meter_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/heightTextView"
        app:layout_constraintBottom_toBottomOf="@id/heightTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/heightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/weightTextView"
        app:layout_constraintStart_toEndOf="@id/weightIcon"
        android:layout_margin="16dp"
        android:text="@string/sample_height"/>

    <ImageView
        android:id="@+id/detailsIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_subject_grey_24dp"
        app:layout_constraintTop_toTopOf="@id/detailsTextView"
        app:layout_constraintBottom_toBottomOf="@id/detailsTextView"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/detailsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/sample_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/detailsIcon"
        app:layout_constraintTop_toBottomOf="@id/heightTextView" />

</android.support.constraint.ConstraintLayout>